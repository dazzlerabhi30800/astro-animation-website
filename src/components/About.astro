---
import { Sprite } from "astro-icon";
---

<section class="section about-section">
  <h2>About the Platform</h2>
  <div class="feature-wrapper">
    <!-- Feature 1 -->
    <div class="feature">
      <img src="./nft/features-1.png" class="feature-img" alt="" />
      <div class="feature-info">
        <div class="feature-text">
          <h3>Create your own NFT</h3>
          <p>
            Multiple Chains, one Home. Stack up all your NFTs from across
            blockchains
          </p>
        </div>
        <div class="feature-stats">
          <div class="stats">
            <h3>4,500+</h3>
            <p>Collections Indexed every 5mins.</p>
          </div>
          <div class="stats">
            <h3>2.5x</h3>
            <p>Difference in Floor & Estimated Value</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Feature 2 -->
    <div class="feature multiple">
      <img src="./nft/features-2.png" class="feature-img" alt="" />
      <div class="feature-info">
        <div class="feature-text">
          <h3>Multiple Chains, One Home</h3>
          <p>
            We make it easy to discover, Invest and manage all your NFTs at one
            place, looked up one of the more obscure.Find the right NFT
            collection to buy within the platform.
          </p>
        </div>
        <div class="feature-stats">
          <div class="stats chain-stats">
            <button class="stat-btn">
              <Sprite.Provider>
                <Sprite name="ion:crop-outline" />
              </Sprite.Provider>
            </button>
            <p>Collections Indexed every 5mins.</p>
          </div>
          <div class="stats chain-stats">
            <button class="stat-btn">
              <Sprite.Provider>
                <Sprite name="carbon:select-window" />
              </Sprite.Provider>
            </button>
            <p>Difference in Floor & Estimated Value</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import ScrollTrigger from "gsap/dist/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const features = document.querySelectorAll(
    ".feature",
  ) as NodeListOf<HTMLDivElement>;

  features.forEach((feature) => {
    gsap.fromTo(
      feature,
      {
        opacity: 0,
        y: -400,
        ease: "elastic.out(i,0.75)",
        duration: 2.5,
      },
      {
        scrollTrigger: {
          trigger: feature,
          start: "0% 80%",
          end: "bottom bottom",
        },
        opacity: 1,
        y: 0,
        duration: 2.5,
        ease: "elastic.out(i,0.75)",
      },
    );
  });
</script>

<style>
  [astro-icon] {
    width: 20px;
    height: 20px;
    color: #fff;
  }
  .feature-wrapper {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    text-align: center;
  }

  .feature {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    place-items: start center;
    gap: 3rem;
    width: 100%;
  }

  .feature-img {
    min-width: 200px;
    width: 90%;
    max-width: 500px;
  }
  .stat-btn {
    border: none;
    outline: none;
    border-radius: 20px;
    padding: 0.8rem 0.9rem;
    background: linear-gradient(to top, rgb(148, 69, 237), rgb(246, 93, 118));
  }

  .feature-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  .feature-text {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .feature-info h3 {
    font-size: clamp(1.8rem, 2vw + 15px, 2.8rem);
  }
  .feature p {
    font-size: clamp(13px, 1.3vw + 3px, 16px);
    color: #ccc;
  }

  .feature-stats {
    display: inline-flex;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem;
  }

  .chain-stats {
    display: flex;
    align-items: center;
    gap: 5px;
    flex-direction: row;
  }

  @media Screen and (min-width: 800px) {
    .about-section {
      justify-content: center;
      gap: 5rem;
    }
    .feature-wrapper {
      width: 75%;
      margin: 1rem auto;
      gap: 6rem;
    }
    .feature {
      grid-template-columns: repeat(2, 1fr);
      text-align: left;
    }
    .multiple .feature-img {
      order: 2;
    }

    .feature-info {
      gap: 4rem;
      /* background: blue; */
      place-self: center start;
    }
    .feature-stats {
      padding: 0;
      justify-content: start;
    }
    .feature p {
      width: 90%;
    }
  }
</style>
